<h1>{{title}}</h1>
<div class="row">
  {{#each sightings as |sighting|}}
    <div class="col-12 col-xxl-6">
      <div class="card mt-4">
        <div class="card-header">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h3 class="card-title mt-1 mb-1">{{sighting.timestamp}}</h3>
            </div>
          </div>
        </div>
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <p class="card-text">{{sighting.note}}</p></div>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>